{
  "name": "tailwind-screen-size",
  "version": "1.0.0",
  "description": "A framework-agnostic screen size indicator optimized for TailwindCSS but customizable for any CSS framework. Features real-time dimensions, breakpoints, themes, and development tools.",
  "main": "./react/index.js",
  "module": "./react/index.mjs",
  "types": "./react/index.d.ts",
  "exports": {
    ".": {
      "types": "./react/index.d.ts",
      "import": "./react/index.mjs",
      "require": "./react/index.js"
    },
    "./react": {
      "types": "./react/index.d.ts",
      "import": "./react/index.mjs",
      "require": "./react/index.js"
    }
  },
  "files": [
    "react"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "tailwindcss",
    "screen-size",
    "responsive",
    "breakpoints",
    "development-tools",
    "framework-agnostic",
    "themes",
    "css-framework",
    "responsive-design",
    "viewport",
    "ui-development",
    "debug-tools"
  ],
  "author": "maestroharyor",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "tailwind-merge": ">=1.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.9.3",
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.24",
    "react": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "tailwind-merge": "^2.5.5"
  }
}
